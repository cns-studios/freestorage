{
  "name": "freestorage-desktop",
  "version": "0.1.11",
  "description": "Desktop client for FreeStorage",
  "author": {
    "name": "FreeStorage Maintainers",
    "email": "maintainers@freestorage.local"
  },
  "homepage": "https://github.com/cns-studios/freestorage",
  "repository": {
    "type": "git",
    "url": "https://github.com/cns-studios/freestorage.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.freestorage.desktop",
    "publish": [
      {
        "provider": "github",
        "owner": "cns-studios",
        "repo": "freestorage"
      }
    ],
    "productName": "freestorage",
    "artifactName": "freestorage-installer-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "deb",
        "rpm",
        "pacman",
        "AppImage"
      ],
      "category": "Utility"
    },
    "pacman": {
      "depends": [
        "gtk3",
        "nss",
        "alsa-lib",
        "libxss",
        "libxtst",
        "xdg-utils"
      ]
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "libasound2",
        "libxss1"
      ]
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libXScrnSaver",
        "libXtst",
        "nss",
        "alsa-lib"
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
